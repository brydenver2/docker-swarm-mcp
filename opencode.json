{
  "$schema": "https://opencode.ai/config.json",
  "disabled_providers": [
    "openai",
    "azure",
    "amazon-bedrock",
    "cohere",
    "mistral",
    "vercel",
    "github-copilot",
    "opencode"
  ],
  "mcp": {
    "deepwiki": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.deepwiki.com/sse"],
      "enabled": true
    },
    "core-memory_and-github": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://core.heysol.ai/api/v1/mcp?source=Open-Code"],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    }
  },
  "permission": {
    "bash": {
      "git status": "allow",
      "git diff": "allow",
      "git add": "allow",
      "git commit": "allow",
      "git log": "allow",
      "git branch": "allow",
      "git checkout": "allow",
      "git pull": "allow",
      "git push": "allow",
      "git stash": "allow",
      "git merge": "allow",
      "ls": "allow",
      "pwd": "allow",
      "cd": "allow",
      "mkdir": "allow",
      "cat": "allow",
      "grep": "allow",
      "find": "allow",
      "tree": "allow",
      "python": "allow",
      "python3": "allow",
      "pip": "allow",
      "pip3": "allow",
      "pip install": "allow",
      "pip freeze": "allow",
      "pip list": "allow",
      "pip show": "allow",
      "python -m venv": "allow",
